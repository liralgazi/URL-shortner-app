{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",                   
    "module": "NodeNext",                
    "moduleResolution": "NodeNext",       
    "allowJs": true,                     
    "strict": true,                       

    /* Output Configuration */
    "outDir": "./dist",                   
    "rootDir": "./src",                   
    "resolveJsonModule": true,           
    "esModuleInterop": true,              
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "skipLibCheck": true                  
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
